<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#E9F6F8"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/v1"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_location"
        android:layout_margin="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/v2"
        android:layout_width="260dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/location_back"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="@id/img1"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WWHQ+H95 Sultanpur Village,Luckn..."
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/v2"
        app:layout_constraintStart_toStartOf="@id/v2"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_notify"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/v2"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="@id/img1"/>


    <ImageView
        android:id="@+id/img3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="@id/img1"/>
    <View
        android:id="@+id/v3"
        android:backgroundTint="@color/white"
        android:layout_marginTop="26dp"
        android:layout_width="320dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/location_back"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/img1" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_search"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="@id/v3"
        app:layout_constraintTop_toTopOf="@id/v3"
        app:layout_constraintBottom_toBottomOf="@id/v3"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Products..."
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/img4"
        app:layout_constraintStart_toEndOf="@id/img4"
        app:layout_constraintBottom_toBottomOf="@id/img4"
        android:layout_marginStart="18dp"/>

    <ImageView
        android:id="@+id/img5"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_mic"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/v3"
        app:layout_constraintTop_toTopOf="@id/v3"
        app:layout_constraintBottom_toBottomOf="@id/v3"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <LinearLayout

        android:id="@+id/ll1"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_mobile"
                />
            <TextView

                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prepaid Mobile Recharge"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView

                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_tv"
                />
            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DTH Recharge"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_fasttag"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fast Tag Recharge"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_metro"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Metro Card Recharge"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout

        android:id="@+id/ll2"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_news"
                />
            <TextView

                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="News"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_loans"
                />
            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loans"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_jobs"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Jobs"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_challan"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Challan Payment"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_gas"
                />
            <TextView

                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gas Booking"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView

                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_electirc"
                />
            <TextView
                android:textColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Electricity BIll"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_water"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Water Bill"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_weight="1">
            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:src="@drawable/ic_forward"
                />
            <TextView
                android:textColor="@color/green"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="See More"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Best Sellers For Needs"
        android:textSize="26dp"
        android:textStyle="bold"
        android:padding="4dp"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fruits &amp; Vegetables"
        android:textSize="26dp"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="@color/green"/>
    <View
        android:id="@+id/v5"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            tools:listitem="@layout/recyclerview_item"
            app:layout_constraintTop_toBottomOf="@id/v5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/recyclerhome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Grocery"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/green"/>
    <View
        android:id="@+id/v6"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerhome2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        tools:listitem="@layout/recyclerview_item"
        app:layout_constraintTop_toBottomOf="@id/v6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>